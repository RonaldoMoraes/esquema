<%= form_for(@answer) do |f| %>

  <div class="field">
    <%= f.label :texto %><br>
    <%= f.text_area :texto %>
  </div>
  <div class="field">
    <%#= f.hidden_field :question_id, :value => params[:id] %>
    <%= f.label :question_id %><br>
    <%= f.collection_select :question_id, Question.all.order(:numero), :id, (:pergunta) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
